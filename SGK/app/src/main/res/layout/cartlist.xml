<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="10dp"
    android:weightSum="3"
    >

    <ImageView
        android:id="@+id/imagecart"
        android:layout_margin="15dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:background="@drawable/imageproduct"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/pnamecart"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Name"
            android:layout_gravity="center"
            android:textColor="#494545" />




        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btncartminus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button"
                android:text="-"

                android:textColor="#fff" />

            <TextView
                android:id="@+id/tvcartquant"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="1"

                />

            <Button
                android:id="@+id/btncartplus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button"
                android:text="+"
                android:textColor="#fff" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/prupeecart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/rupee"
                    android:textColor="#000"
                    android:layout_gravity="top"
                    />

                <TextView
                    android:id="@+id/ppricecart"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:text="Price"
                    android:textColor="#000"
                    android:layout_gravity="top"
                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"

            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ptotalcart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:text="Total : "
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/ptotalrupeecart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:text="@string/rupee"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/ptotalpricecart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:text="Price"
                    android:textColor="#000" />


            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/removeItem"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="25dp"
            android:text="Remove"
            android:background="@drawable/button"
            android:textColor="#fff"
            />

    </LinearLayout>



</LinearLayout>